!!!
%html
  %head
    %title EURO PuNDIT
    %script{:src => "/lib/jquery-1.7.min.js", :type => "text/javascript"}
    %script{:src => "/lib/bootstrap/js/bootstrap.min.js"}
    %script{:src => "/application.js"}
    %link{:href => "/lib/bootstrap/css/bootstrap.min.css", :rel => "stylesheet"}
    %link{:href => "/application.css", :rel => "stylesheet"}
  %body{:style => "padding-top: 50px;"}
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{:href => "/"}
            EURO PuNDIT
          %ul.nav
            %li
              %a{href: "/schedule"} All Matches
            - if logged_in?
              %li
                %a{href: "/predictions"}= "#{current_user.points} Points"
              %li
                %a{href: "/leaderboard"} Leaderboard
          %ul.nav.pull-right
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                = logged_in? ? current_user.email : "Login"
                %b.caret
              %ul.dropdown-menu
                - if logged_in?
                  %li
                    %a{:href => "/reset_password"} Reset password
                    %a{:href => "/log_out"} Log out
                - else
                  %li
                    %form{:action => "/login", :method => "post", style: "padding: 20px; margin: 0px;"}
                      %input{:autofocus => "", :name => "email", :placeholder => "email"}
                      %input{:name => "password", :placeholder => "password", :type => "password"}
                        %input.btn.primary{:type => "submit", :value => "Log In", style: "float: right"}
    .container.content
      - if @error then
        .alert.alert-error= @error
      = yield